<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:rotation="-30"
        android:src="@drawable/track"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/petlyH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="petly."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/migra_extrabold"
        android:textSize="70dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/petlyH"
        android:src="@drawable/puppy"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_section_background"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/singUpH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/singUpH"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/deit_text_backgound"
            android:layout_below="@+id/labelName"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@+id/editName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/deit_text_backgound"
            android:layout_below="@+id/labelEmail"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textEmailAddress"
            />

        <TextView
            android:id="@+id/labelCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_below="@+id/editEmail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/labelCity"
            android:layout_marginRight="10dp"
            android:background="@drawable/deit_text_backgound"
            android:paddingLeft="10dp"
            android:spinnerMode="dropdown"
            />


        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_below="@+id/spinnerCity"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/deit_text_backgound"
            android:layout_below="@+id/labelPassword"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btnSingUp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/singup_button_backgound"
            android:text="Sing Up"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_below="@+id/editPassword"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSingUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alredy have an account?"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>